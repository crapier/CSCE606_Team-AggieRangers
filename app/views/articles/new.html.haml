.container
  .panel.panel-default
    .panel-heading 
      %h4.text-center New Article
      = form_tag issue_articles_path, :class=>"form-inline" do
        
        .row
          .col-sm-1
          .col-sm-10
            .form-group.new-issue-form-group
              = label :article, :title, 'Title'
              %br
              = text_field :article, 'title', :class=>'form-control new-issue-form-group'
          .col-sm-1
          
        .row
          .col-sm-1
          .col-sm-10
            .form-group.new-issue-form-group
              = label :article, :image_url, 'Image Url'
              %br
              = text_field :article, 'image_url', :class=>'form-control new-issue-form-group'
          .col-sm-1
          
        .row 
          .col-sm-1
          .col-sm-10
            .form-group.new-issue-form-group
              = label :article, :content, 'Content'
              %br
              = text_area :article, 'content', :class=>'form-control new-issue-form-group'
          .col-sm-1
          
        %br
        %br
        .div.text-right
          = link_to "Cancel", issue_path(params[:issue_id]), :class=>"btn btn-primary btn-lg active btn-danger"
          = submit_tag 'Save Changes', :class=>"btn btn-primary btn-lg active btn-success"
      
