!!!

%html
  %head
    %title nth Degree
    = stylesheet_link_tag 'application', 'media' => 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
       
    .container
      .row
        
        %br
        %h1#main-title.title.text-center "nth Degree Issues Builder"
        %br
        
        #main
          
          %div{:class => "modal fade", :id => "confirm-delete", :tabindex => "-1", :role => "dialog", :'aria-labelledby' => "myModalLabel", :'aria-hidden' => "true"}
            .modal-dialog
              .modal-content
                .modal-header
                  %button{:type => "button", :class => "close", :'data-dismiss' => "modal", :'aria-hidden' => "true"} &times;
                  %h4{ :class => "modal-title"}Confirm Delete
                .modal-body
                  %p#delete-message Are you sure you want to delete this item?
                  
                  #my-loader{:style => 'padding: 10px', :class => 'hide'}
                    .loader
                  
                .modal-footer
                  
                  %button{ :type => "button", :class => "btn btn-default", :'data-dismiss' => "modal"} Cancel
                  %button{ :type => "button", :class => "btn btn-danger btn-ok", :id => "confirmDeleteOk"} Delete
                  
          =flash_messages

= yield