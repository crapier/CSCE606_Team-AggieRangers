

%table#issues
  %thead
    %tr
      %th Title
      %th Volume
      %th Issue
      %th Date
      %th Show
      %th Delete
      %th Generate
  %tbody
    - @issues.each do |issue|
      %tr
        %td= issue.title 
        %td= issue.volume
        %td= issue.issue_number
        %td= issue.date
        %td= link_to image_tag("show.png", size: "24x24"), issue_path(issue), id: "show " + issue.title
        %td= link_to image_tag("delete.png", size: "24x24"), issue_path(issue), id: "delete " + issue.title, method: :delete
        %td= link_to image_tag("generate.png", size: "24x24"), generate_issue_path(issue)
= link_to "New Issue", new_issue_path