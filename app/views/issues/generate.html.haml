.container{:style => "width:90%;"}
  .panel.panel-default
    .panel-heading 
      %h3.text-center "Generated HTML"
    .panel-body
      .row
        .col-sm-6
          = text_area :email_html, :text, style: "width: 100%; height: 500px;"
        .col-sm-6
          %iframe{:id => "preview", :style => "width:100%;height: 500px;", :srcdoc => @email_html.text} 
    .div.text-right
      = link_to "Show Issue", issue_path(@issue), :class=>"btn btn-primary btn-lg active btn-danger"
      = link_to "Back to Issues", issues_path, :class=>"btn btn-primary btn-lg active btn-success"
      %br
      %br

